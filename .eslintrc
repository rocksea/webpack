{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb"],
  "rules": {
    "no-console": 2,
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  }
}
